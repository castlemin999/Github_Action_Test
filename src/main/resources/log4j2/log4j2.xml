<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

    <!-- 해당 설정파일에서 사용하는 프로퍼티-->
    <Properties>
        <property name="LOGS_PATH">C:\RG_GP_Log</property>
        <property name="ERR_LOGS_PATH">C:\RG_GP_Log/error</property>
        <property name="LOG_FORMAT">[%d{yyyy-MM-dd HH:mm:ss}:%-3relative] %-5level %logger{35} - %msg%n</property>
    <!--<property name="LOG_FORMAT">%style{%d{yyyy/MM/dd HH:mm:ss,SSS}}{cyan} %highlight{[%-5p]}{FATAL=bg_red, ERROR=red, INFO=green, DEBUG=blue}  [%C] %style{[%t]}{yellow}- %m%n -</property>-->
    </Properties>

    <Appenders>
        <!-- 콘솔 -->
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_FORMAT}" />
        </Console>

        <!-- INFO 파일 -->
        <RollingFile name ="RollingFile" fileName = "${LOGS_PATH}/RG_GamePlatform.log" filePattern="${LOGS_PATH}/RG_GamePlatform.%d{yyyy-MM-dd}.log.gz">
            <PatternLayout pattern="${LOG_FORMAT}" />
            <Policies>
                <SizeBasedTriggeringPolicy size="100MB"/>
                <TimeBasedTriggeringPolicy interval = "1" modulate = "true"/>
            </Policies>
        </RollingFile>

        <!-- ERROR 파일 -->
        <RollingFile name ="RollingFileError" fileName = "${ERR_LOGS_PATH}/RG_GamePlatform_Error.log" filePattern="${ERR_LOGS_PATH}/RG_GamePlatform_Error.%d{yyyy-MM-dd}.log.gz">
            <PatternLayout pattern="${LOG_FORMAT}" />
            <Policies>
                <SizeBasedTriggeringPolicy size="100MB"/>
                <TimeBasedTriggeringPolicy interval = "1" modulate = "true"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- FATAL, ERROR, WARN, INFO, DEBUG, TRACE -->
        <Root level="INFO">
            <AppenderRef ref="console" />
            <AppenderRef ref="RollingFile" />
            <AppenderRef ref="RollingFileError" level="ERROR"/>
        </Root>

        <!-- Application Loggers (개별 설정) -->
        <!-- Root 보다 우선 순위가 높음 -->
        <logger name="com.test.sample.controller1" level="DEBUG" additivity="false">
            <AppenderRef ref="console" />
            <AppenderRef ref="RollingFile" />
        </logger>

        <logger name="com.test.sample.controller2" level="INFO" additivity="false">
            <AppenderRef ref="console" />
            <AppenderRef ref="RollingFile" />
            <AppenderRef ref="RollingFileError" />
        </logger>

    </Loggers>
</Configuration>